<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body{
            background: #f7f9fc; 
        }
        .todo-card{ 
            transition: 0.3s; 
        }
        .todo-card:hover{
            transform: scale(1.02); 
        }
        .form-control:focus{
            box-shadow: none !important;
            outline: none !important;   
        }
        .form-select:focus{
            box-shadow: none !important;
            outline: none !important;   
        }
        hr{
            border: 1px solid white;   
        }
    </style>
</head>
<body class="bg-black">
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 border-white border-2 border rounded-4">

            <h1 class="text-center fw-semibold text-white bg-black rounded-3 mt-2">Todo Application</h1>
            <hr/>
            <% let edit = (typeof editTodo !== 'undefined') ? editTodo : null; %>

            <div class="card shadow-lg p-4 mb-4 bg-black">
                <h4 class="mb-3 text-secondary text-white"><%= edit ? "Update Todo" : "Add New Todo" %></h4>

                <form action="<%= edit ? '/update/' + edit.id : '/' %>" method="post">

                    <div class="input-group mb-3">
                        <select name="category" class="form-select form-select-lg" required>
                            <option value="">
                                Select Category
                            </option>
                            <option value="Work" <%= edit && edit.category === "Work" ? "selected" : "" %>
                                >Work
                            </option>
                            <option value="Personal" <%= edit && edit.category === "Personal" ? "selected" : "" %>
                                >Personal
                            </option>
                            <option value="Shopping" <%= edit && edit.category === "Shopping" ? "selected" : "" %>
                                >Shopping
                            </option>
                            <option value="Study" <%= edit && edit.category === "Study" ? "selected" : "" %>
                                >Study
                            </option>
                        </select>
                    </div>
                    <div class="input-group">

                        <input type="text" name="todo" class="form-control form-control-lg" placeholder="Enter your task..." value="<%= edit ? edit.todo : '' %>" required>
                        <button class="btn btn-outline-dark text-white" type="submit">
                            <%= edit ? "Update" : "Add" %>
                        </button>
                    </div>
                </form>
            </div>

            <div class="card shadow p-4 bg-black">
                <h4 class="mb-3 text-secondary text-white">
                    Your Todos
                </h4>
                <% if (data.length === 0) { %>
                    <p class="text-white text-center">
                        No todos added yet.
                    </p>
                <% } %>
                <% data.forEach(t => { %>
                    <div class="card todo-card mb-3 p-3 shadow-sm border-2 bg-black border-white text-white w-100 rounded-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="">
                                <div class="fs-5 fw-semibold text-white"><%= t.todo %></div>
                                <div class="small text-white"><%= t.time %></div>
                                <span class="badge bg-info text-dark mt-2"><%= t.category %></span>
                            </div>
                            <div>
                                <a href="/edit/<%= t.id %>" class="btn btn-sm btn-warning me-2">Edit</a>
                                <a href="/delete/<%= t.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>